# 生产环境配置
# 将此文件保存为 /var/www/vue-app/backend/.env

# MongoDB连接（使用阿里云MongoDB或自建MongoDB）
MONGO_URI=mongodb://localhost:27017/vue_papers_prod

# JWT密钥（使用强随机密钥）
JWT_SECRET=your-production-jwt-secret-key-change-this-to-a-very-long-random-string

# 服务器端口
PORT=3000

# 前端URL（生产环境域名）
FRONTEND_URL=https://your-domain.com

# Ollama配置
OLLAMA_API_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=deepseek-r1:7b
OLLAMA_EMBED_MODEL=nomic-embed-text

# 邮件配置（可选）
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-production-app-password

# 生产环境标志
NODE_ENV=production

# 其他安全配置
BCRYPT_ROUNDS=12
SESSION_SECRET=another-long-random-string-for-sessions

# API限流配置
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# 文件上传限制
MAX_FILE_SIZE=10MB
